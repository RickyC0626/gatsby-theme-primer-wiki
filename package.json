{
  "private": true,
  "scripts": {
    "start": "npm run develop -w example",
    "clean": "npm run clean -w example",
    "release": "release-it",
    "build": "npm -w example run build",
    "serve": "npm -w example run serve",
    "test": "npm -ws run test -- --passWithNoTests",
    "lint": "npx prettier --write . && eslint ./ --fix",
    "check": "npx prettier --check --loglevel debug .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*": "prettier --write  --ignore-unknown"
  },
  "workspaces": [
    "transformer-url",
    "slug",
    "references",
    "rewrite",
    "summary",
    "theme",
    "example"
  ],
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "release-it": "^14.11.5",
    "release-it-yarn-workspaces": "^2.0.1"
  },
  "dependencies": {},
  "version": "1.8.2"
}
